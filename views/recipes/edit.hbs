<main>
<h1>Edit recipe!</h1>
<a href="/">Return to Home Page</a>

<div id="edit-form" class="recipe-container-show">
<form action="{{recipe._id}}?_method=PUT" method="POST">
	<input type="text" name="title" placeholder={{recipe.title}}>
	<input type="text" name="image" placeholder={{recipe.image}}>
    <input type="textarea" name="description" placeholder={{recipe.description}}>
	<input type="text" name="prep time" placeholder={{recipe.preptime}}>
	<input type="text" name="ingredients" placeholder={{recipe.ingredients}}>
    <input type="textarea" name="direction" placeholder={{recipe.directions}}>
    <input type="submit" value="Submit">
</form>
		<div id="img-preview">
			<img src="{{recipe.imgage}}">
		</div>

	</div>
</main>

  