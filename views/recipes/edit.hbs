<main>
<h1>Edit recipe!</h1>

<form action="/recipes/{{recipe._id}}?_method=PUT" method="POST">
	<input type="text" name="name" placeholder="Title" value={{recipe.title}}>
	<input type="text" name="img" placeholder={{recipe.image}}>
    <input type="textarea" name="description" placeholder="Description">{{recipe.description}}
	<input type="text" name="prep time" placeholder={{recipe.preptime}}>
	<input type="text" name="ingredients" placeholder="Ingredients">{{recipe.ingredients}}
    <input type="textarea" name="directions" placeholder="'Directions">{{recipe.directions}}
    <input type="submit" value="Submit">
</form>
</main>
  